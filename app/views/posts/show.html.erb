
<div class="container">
<%= render @post %>

<div>
    <div class="py-4">
    <% if current_user.id == @post.user.id %>
    <%= link_to "Edit this post", edit_post_path(@post), class: 'btn btn-info' %>
    <% end %>
    <%= link_to "Back to posts", posts_path, class: 'btn btn-info ms-2' %>
    </div>

    <div class="py-2">
    <% if current_user.id == @post.user.id %>
    <%= button_to "Destroy this post", @post, method: :delete, class:'btn btn-danger' %>
    <%end%>
    </div>
  </div>
</div>

<div class="container mt-4">
  <%= render 'comments/form', post: @post %>
</div>

<div class="container my-4">
  <% @comments.each do |comment| %>
  <%= render 'comments/comment', post: @post, comment: comment %>
  <% end %>
</div>



